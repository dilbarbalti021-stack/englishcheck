<body>
    <div class="container">
        <header>
            <h1>Writing Lens</h1>
            <p class="subtitle">Focused feedback on the aspects that matter to you</p>
        </header>

        <div class="editor-section">
            <div class="section-label">Your Writing</div>
            <textarea id="writingInput" placeholder="Paste or type your text here..."></textarea>
            <div class="word-count"><span id="wordCount">0</span> words</div>
        </div>

        <div class="editor-section aspects-section">
            <div class="section-label">Select Feedback Aspects</div>
            <div class="aspects-grid">
                <div class="aspect-chip">
                    <input type="checkbox" id="grammar" value="Grammar & Spelling" checked>
                    <label for="grammar"><span class="icon">✓</span> Grammar</label>
                </div>
                <div class="aspect-chip">
                    <input type="checkbox" id="clarity" value="Clarity & Readability">
                    <label for="clarity"><span class="icon">◎</span> Clarity</label>
                </div>
                <div class="aspect-chip">
                    <input type="checkbox" id="tone" value="Tone & Voice">
                    <label for="tone"><span class="icon">♪</span> Tone</label>
                </div>
                <div class="aspect-chip">
                    <input type="checkbox" id="structure" value="Structure & Flow">
                    <label for="structure"><span class="icon">≡</span> Structure</label>
                </div>
                <div class="aspect-chip">
                    <input type="checkbox" id="conciseness" value="Conciseness">
                    <label for="conciseness"><span class="icon">◇</span> Conciseness</label>
                </div>
                <div class="aspect-chip">
                    <input type="checkbox" id="vocabulary" value="Vocabulary & Word Choice">
                    <label for="vocabulary"><span class="icon">Aa</span> Vocabulary</label>
                </div>
                <div class="aspect-chip">
                    <input type="checkbox" id="engagement" value="Engagement & Impact">
                    <label for="engagement"><span class="icon">★</span> Engagement</label>
                </div>
                <div class="aspect-chip">
                    <input type="checkbox" id="argument" value="Argument & Logic">
                    <label for="argument"><span class="icon">⚡</span> Argument</label>
                </div>
            </div>

            <button class="analyze-btn" id="analyzeBtn">
                <span class="btn-text">Analyze Writing</span>
            </button>
        </div>

        <div class="editor-section feedback-section" id="feedbackSection">
            <div class="feedback-header">
                <div class="section-label">Feedback</div>
                <div class="feedback-status">
                    <span class="status-dot" id="statusDot"></span>
                    <span id="statusText">Analyzing...</span>
                </div>
            </div>
            <div class="feedback-content" id="feedbackContent"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script>
        // Dark mode detection
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
        }
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {
            if (event.matches) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        });

        // Elements
        const writingInput = document.getElementById('writingInput');
        const wordCountEl = document.getElementById('wordCount');
        const analyzeBtn = document.getElementById('analyzeBtn');
        const feedbackSection = document.getElementById('feedbackSection');
        const feedbackContent = document.getElementById('feedbackContent');
        const statusDot = document.getElementById('statusDot');
        const statusText = document.getElementById('statusText');

        // Word count
        writingInput.addEventListener('input', () => {
            const text = writingInput.value.trim();
            const words = text ? text.split(/\s+/).length : 0;
            wordCountEl.textContent = words;
        });

        // Get selected aspects
        function getSelectedAspects() {
            const checkboxes = document.querySelectorAll('.aspect-chip input:checked');
            return Array.from(checkboxes).map(cb => cb.value);
        }

        // Configure marked for security
        marked.setOptions({
            breaks: true,
            gfm: true
        });

        // Register handler for streaming feedback
        window.Poe.registerHandler('feedback-handler', (result) => {
            const msg = result.responses[0];

            if (msg.status === 'error') {
                statusDot.className = 'status-dot error';
                statusText.textContent = 'Error occurred';
                feedbackContent.innerHTML = `<div class="empty-state">Error: ${msg.statusText || 'Unable to get feedback'}</div>`;
            } else if (msg.status === 'incomplete') {
                statusDot.className = 'status-dot loading';
                statusText.textContent = 'Analyzing...';
                feedbackContent.innerHTML = marked.parse(msg.content);
            } else if (msg.status === 'complete') {
                statusDot.className = 'status-dot';
                statusText.textContent = 'Complete';
                feedbackContent.innerHTML = marked.parse(msg.content);
                analyzeBtn.disabled = false;
                analyzeBtn.innerHTML = '<span class="btn-text">Analyze Writing</span>';
            }
        });

        // Analyze button click
        analyzeBtn.addEventListener('click', async () => {
            const text = writingInput.value.trim();
            const aspects = getSelectedAspects();

            if (!text) {
                showFeedback('Please enter some text to analyze.', 'error');
                return;
            }

            if (aspects.length === 0) {
                showFeedback('Please select at least one aspect for feedback.', 'error');
                return;
            }

            // Show loading state
            analyzeBtn.disabled = true;
            analyzeBtn.innerHTML = '<div class="spinner"></div><span class="btn-text">Analyzing...</span>';

            feedbackSection.classList.add('visible');
            statusDot.className = 'status-dot loading';
            statusText.textContent = 'Analyzing...';
            feedbackContent.innerHTML = '<div class="empty-state">Getting feedback...</div>';

            // Build prompt
            const aspectsList = aspects.join(', ');
            const prompt = `Analyze the following writing and provide focused, constructive feedback ONLY on these specific aspects: ${aspectsList}.

For each aspect, provide:
- Specific observations with examples from the text
- Actionable suggestions for improvement
- What's working well (if applicable)

Keep feedback clear, organized with headings for each aspect, and practical. Use markdown formatting.

---

TEXT TO ANALYZE:

${text}`;

            try {
                await window.Poe.sendUserMessage(`@GPT-4o-mini ${prompt}`, {
                    handler: 'feedback-handler',
                    stream: true,
                    openChat: false
                });
            } catch (err) {
                showFeedback(`Error: ${err.message || 'Unable to analyze text'}`, 'error');
                analyzeBtn.disabled = false;
                analyzeBtn.innerHTML = '<span class="btn-text">Analyze Writing</span>';
            }
        });

        function showFeedback(message, type = 'info') {
            feedbackSection.classList.add('visible');
            statusDot.className = `status-dot ${type === 'error' ? 'error' : ''}`;
            statusText.textContent = type === 'error' ? 'Error' : 'Info';
            feedbackContent.innerHTML = `<div class="empty-state">${message}</div>`;
        }
    </script>
</body>
</html>
